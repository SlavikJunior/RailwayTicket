<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ceefe4"
    tools:context=".RailwayTicket">

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Ваш билет"
        android:textSize="24sp"
        android:textColor="#F38181"
        android:gravity="center"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="ID"
            android:layout_marginTop="5dp"
            android:textColor="#F38181"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvPlSt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="PlaceStart"
            android:layout_marginTop="5dp"
            android:textColor="#F38181"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvTimeSt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="TimeStart"
            android:layout_marginTop="5dp"
            android:textColor="#F38181"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvPlEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="PlaceEnd"
            android:layout_marginTop="5dp"
            android:textColor="#F38181"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvTimeEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="TimeEnd"
            android:layout_marginTop="5dp"
            android:textColor="#F38181"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Count"
            android:layout_marginTop="5dp"
            android:textColor="#F38181"
            android:textSize="21sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="Вернуться к оформлению"
        android:background="@drawable/shape_btn"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>